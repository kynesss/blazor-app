@page "/"

@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Index</PageTitle>

<AuthorizeView>
    <Authorized>
        <h1>Hello, @context.User.Identity.Name!</h1>
                    You are logged in!
    </Authorized>
    <NotAuthorized>
        <h1>Hello, Guest!</h1>
            Sign in to add new announcement!
    </NotAuthorized>
</AuthorizeView>